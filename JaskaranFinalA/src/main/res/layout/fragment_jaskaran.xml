<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/yellow"
    tools:context=".ui.home.JaskaranFragment">

    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/jashomedetails"
        android:textColor="@color/purple_500"
        android:text="Jaskaran Singh s301109429"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:textSize="25dp"
        android:textStyle="bold"/>
    <!--<View
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="5dp"/>-->

    <Button
        android:id="@+id/jasdownload"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Download and Display Image from the Internet" />

    <ImageView
        android:id="@+id/jasimage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"/>

</LinearLayout>